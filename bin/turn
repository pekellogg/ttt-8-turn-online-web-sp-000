#!/usr/bin/env ruby
require_relative '../lib/turn' # never need .rb for require_relative, ruby assumes .rb

# greet user
puts "Welcome to Tic Tac Toe!"

# create an empty board at start
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

# display board
display_board(board)

# initialize first turn
turn(board)
